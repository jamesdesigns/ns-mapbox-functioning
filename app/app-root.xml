    <TabViewItem title="&#xff004;">
        <Frame defaultPage="favorites/favorites-page"></Frame>
    </TabViewItem>
    <TabViewItem title="&#xff013;"> 
        <Frame defaultPage="settings/settings-page"></Frame>
    </TabViewItem>
</TabView>